{
  "name": "farmacia-app",
  "version": "1.0.0",
  "description": "Sistema de inventario y ventas para farmacia con Node.js, Express, SQLite y Electron",
  "main": "main.js",
  "scripts": {
    "backend": "nodemon backend/server.js",
    "electron": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run electron\"",
    "build": "electron-builder"

  },
  "keywords": [
    "electron",
    "nodejs",
    "express",
    "sqlite",
    "farmacia",
    "inventario"
  ],
  "author": "TuNombre",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "sweetalert": "^2.1.2",
    "sweetalert2": "^11.23.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.farmacia.sistemainventario",
    "productName": "Sistema Farmacia",
    "files": [
      "**/*",
      "!node_modules/electron-builder/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
